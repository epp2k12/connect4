// here we will make some functions 

function reset_game() {
    //this function will reset the game
    for(i=1;i<=42;i++) {
        $('#b' + i).removeClass('box1 box2 isMarked').css('background-color','#ffffff');
    }
    var init_vars = [1,false];
    return init_vars;
}


   function check_for_connect( con, dCol, mC, theBox ) {

        //initialize tools
        con=Number(con);
        dCol=Number(dCol);
        mC=Number(mC);
        theBox=Number(theBox);
        row_pos = Math.ceil((theBox/7));
        f_row_num = (row_pos * 7) - (7-1);
        l_row_num = row_pos * 7;
        col_pos = (theBox - f_row_num) + 1;
        f_col_num = theBox - ((row_pos - 1) * 7);
        l_col_num = theBox + ((6-row_pos) * 7);


        //check row win
        var num_connect = 0;
        var start_count = false;
        for(i=0;i<7;i++) {
            if($('#b' + (f_row_num + i)).hasClass('box' + thePlayer) ) {
                start_count = true;
                num_connect++;
                if(num_connect == 4) {
                    alert("somebody stop me! Winner is player " + thePlayer);
                    $('#dPlayer').html('WINNER PLAYER ' + thePlayer).css({'background-color':'yellow','color':'black'});
                    return true;
                }
            }else{
                if(start_count) {
                     break;
                }
            }
        }

        //check column win
        num_connect = 0;
        start_count = false;
        var col_inc = 0;
        for(i=0;i<6;i++) {
            if($('#b' + (f_col_num + col_inc)).hasClass('box' + thePlayer) ) {
                start_count = true;
                num_connect++;
                if(num_connect == 4) {
                    alert("somebody stop me! Winner is player " + thePlayer);
                    $('#dPlayer').html('WINNER PLAYER ' + thePlayer).css({'background-color':'yellow','color':'black'});
                    return true;
                }
            }else{
                if(start_count) {
                    break;
                }
            }
            col_inc += 7;
        }

        //check right diagonal win
        incr = 8;
        var temp_box = get_first_right_diagonal_num(row_pos,col_pos,theBox,incr);
        var result = loop_diagonal(temp_box,thePlayer,incr);
        if(result) {
            $('#dPlayer').html('WINNER PLAYER ' + thePlayer).css({'background-color':'yellow','color':'black'});
            return true;
        }

        //check left diagonal win
        incr = 6;
        var temp_box = get_first_left_diagonal_num(row_pos,col_pos,theBox,incr);
        var result = loop_diagonal(temp_box,thePlayer,incr);
        if(result) {
            $('#dPlayer').html('WINNER PLAYER ' + thePlayer).css({'background-color':'yellow','color':'black'});
            return true;
        }

    }

    function get_first_left_diagonal_num(the_box_row,the_box_col,start_box,incr) {
        //return("hello world!");
        for(i=1;i<7;i++) {
                the_box_row--;
                the_box_col++;
                if(the_box_row < 1) {
                     return start_box;
                }
                if(the_box_col > 7) {
                    return start_box;               
                }
            start_box -= incr;
        }
    }

    function get_first_right_diagonal_num(the_box_row,the_box_col,start_box,incr) {
        for(i=1;i<7;i++) {
            the_box_row--;
            the_box_col--;
            if(the_box_row < 1) {
                return start_box;
            }
            if(the_box_col < 1) {
                return start_box;               
            }
            start_box -= incr;
        }
    }

    function loop_diagonal(temp_box,thePlayer,incr) {
       
        num_connect = 0;
        start_count = false;
        //get col position of temp_box
        dCol = $('#b'+temp_box).attr('dcol');
        dRow = $('#b'+temp_box).attr('drow');

        for(i=1;i<7;i++) {
            dCol++;
            dRow++;
            if($('#b'+temp_box).hasClass('box' + thePlayer)) {
                start_count = true;
                num_connect++;
                if(num_connect == 4) {
                    alert("somebody stop me! Winner is player " + thePlayer);
                    return true;
                }
            }else{
                if(start_count) {
                    break;
                }
                num_connect = 0;
            }
            temp_box+=incr;
        }
    }

